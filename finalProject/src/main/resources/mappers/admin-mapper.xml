<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="adminMapper">
	
	<resultMap type="Member" id="memberResultSet">
		<result column="USER_NO" property="userNo"/>
		<result column="STUDENT" property="student"/>
		<result column="TEACHER" property="teacher"/>
		<result column="USER_ID" property="userId"/>
		<result column="USER_PWD" property="userPwd"/>
		<result column="USER_NAME" property="userName"/>
		<result column="GENDER" property="gender"/>
		<result column="EMAIL" property="email"/>
		<result column="BIRTH" property="birth"/>
		<result column="ENROLL_DATE" property="enrollDate"/>
		<result column="MODIFIY_DATE" property="modifyDate"/>
		<result column="APPROVAL" property="approval"/>
		<result column="STATUS" property="status"/>
	</resultMap>
	
	
	
	<!-- 전체 회원 수 구하기 -->
	<select id="selectMemberListCount" resultType="_int">
	SELECT COUNT(*)
	FROM MEMBER
	</select>

	<!-- 전체 회원 목록 -->
	<select id="memberList" resultMap="memberResultSet">
	SELECT B.* FROM
	(SELECT * 
		FROM MEMBER 
		WHERE USER_NO != 1
		ORDER BY MODIFY_DATE DESC) B
	ORDER BY DECODE(B.APPROVAL,'N','D','Y')
	</select>
	
	
	<!-- 가입승인 -->
	<update id="joinApproval">
	UPDATE MEMBER
	SET APPROVAL = 'Y'
	WHERE USER_NO = #{userNo}
	
	</update>
	
	<!-- 가입 거절 -->
	<update id="joinRefusal">
	UPDATE MEMBER
	SET APPROVAL = 'D'
	WHERE USER_NO = #{userNo}
	
	</update>
	
	<!-- student 정보 삭제 -->
	<delete id="deleteStu">
	DELETE FROM STUDENT
	WHERE USER_NO = #{userNo}
	</delete>
	
	<!-- 증명사진 삭제 -->
	<delete id="deleteIp">
	DELETE FROM ID_PICTURE
	WHERE USER_NO = #{userNo}
	</delete>
	
	<!-- 성적표 삭제 -->
	<delete id="deleteRc">
	DELETE FROM REPORT_CARD
	WHERE USER_NO = #{userNo}
	</delete>
	
	<!-- Teacher 정보 삭제 -->
	<delete id="deleteTea">
	DELETE FROM TEACHER
	WHERE USER_NO = #{userNo}
	</delete>

	<!-- 재학증명서 삭제 -->
	<delete id="deleteIc">
	DELETE FROM ID_CARD
	WHERE USER_NO = #{userNo}
	</delete>

</mapper>
